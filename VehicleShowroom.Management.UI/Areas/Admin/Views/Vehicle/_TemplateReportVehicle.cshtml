@model VehicleShowroom.Management.Application.Models.DTOs.VehicleDTO
@{
    var i = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vehicle Invoice</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .invoice-container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            border-radius: 10px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

            .header h1 {
                margin: 0;
                color: #333;
            }

            .header p {
                margin: 5px 0;
                font-size: 15px;
                color: #666;
            }

        .customer-info, .invoice-details {
            margin-bottom: 20px;
        }

            .customer-info h2, .invoice-details h2 {
                margin-bottom: 10px;
                font-size: 18px;
                color: #007bff;
            }

        .info-table {
            width: 100%;
            border-collapse: collapse;
        }

            .info-table th, .info-table td {
                border: 1px solid #ddd;
                padding: 10px;
                text-align: left;
            }

            .info-table th {
            }

            .info-table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

        .footer {
            text-align: center;
            margin-top: 50px;
            font-size: 18px;
            color: #666;
        }
    </style>
</head>
<body>

    <div class="invoice-container">
        <!-- Header -->
        <div class="header">
            <h1>Vehicle Showroom Management System</h1>
            <p>Address: 123 Main Street, City, Country</p>
            <p>Phone: +123456789 | Email: info@showroom.com</p>
            <p>Date: <span id="currentDate">12/2/2024</span></p>
        </div>

        <!-- Customer Information -->
        <div class="customer-info">
            <table class="info-table">
                <tr>
                    <th>Vehicle ID</th>
                    <td>#@Model.VehicleId</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>
                        Model Number
                    </th>
                    <td>@Model.ModelNumber</td>
                </tr>
                <tr>
                    <th>Supplier</th>
                    <td>@Model.SupplierName</td>
                </tr>
                <tr>
                    <th>Company</th>
                    <td>@Model.CompanyName</td>
                </tr>
                <tr>
                    <th>Color</th>
                    <td>@Model.Color</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>@string.Format("{0:C}", Model.Price)</td>
                </tr>
                <tr>
                    <th>Engine Number</th>
                    <td>@Model.EngineNumber</td>
                </tr>
                <tr>
                    <th>Chassis Number</th>
                    <td>@Model.ChassisNumber</td>
                </tr>
                <tr>
                    <th>Fuel Type</th>
                    <td>@Model.FuelType</td>
                </tr>
                <tr>
                    <th>TransmissionType</th>
                    <td>@Model.TransmissionType</td>
                </tr>
                <tr>
                    <th>Mileage</th>
                    <td>@Model.Mileage</td>
                </tr>
                <tr>
                    <th>ManufactureYear</th>
                    <td>@Model.ManufactureYear</td>
                </tr>
            </table>
        </div>


        <!-- Footer -->
        <div class="footer">
            <p>Thank you for choosing Vehicle Showroom Management System!</p>
        </div>
    </div>

</body>
</html>
