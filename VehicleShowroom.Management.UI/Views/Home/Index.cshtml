<section class="car spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Our Car</span>
                    <h2>Best Vehicle Offers</h2>
                </div>
            </div>
        </div>
        <div class="row car-filter">
            @foreach (var v in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix">
                    <div class="car__item">
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@v.VehicleId">
                            <img src="@(Url.Content("~/Uploads/vehicles/" + v.Image))"
                                 alt="Avatar" class="card-img"
                                 style="width: 100%;height:150px;object-fit: cover;" />
                        </a>
                        <div class="car__item__text">
                            <div class="car__item__text__inner">
                                <div class="label-date">@v.ModelNumber</div>
                                <h5><a href="javascript:void(0)">@v.Name</a></h5>
                                <h6>@v.CompanyName</h6>
                                <h6>@v.SupplierName</h6>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <nav role="navigation" aria-label="Pagination Navigation" class="flex items-center justify-between">

            <div>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
                                 new PagedListRenderOptions
                        {
                            LiElementClasses = new[] { "page-item" },
                            PageClasses = new[] { "page-link" },
                            UlElementClasses = new[] { "pagination" }
                        })
                    </ul>
                </nav>
            </div>
        </nav>
    </div>
</section>
